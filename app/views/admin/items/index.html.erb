  <%= render 'small_banner' %>

<div class="content row justify-content-md-center">
  <div class="card col-lg-10">
    <div class="card-body">
      <h1><%= @items.count %> Photos</h1>
    <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Photo</th>
                  <th>Titre</th>
                  <th>Description</th>
                  <th>Prix</th>
                  <th>Auteur</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @items.each do |i| %>
                  <tr>
                    <td><%= i.id %></td>
                    <td>
                      <% if i.item_picture.attached? %>
                        <%= image_tag i.item_picture, alt: 'item picture', width: '100' %>
                      <% else %>
                        <img style="width:100px;" src="<%= i.image_url %>"></a>
                      <% end %>
                    </td>
                    <td><%= i.title %></td>
                    <td> <%= i.description %></td>
                    <td><%= i.price %></td>
                    <td><%= i.author %></td>
                    <td>
                      <%= link_to '<i class="fas fa-eye"></i>'.html_safe, admin_item_path(i.id), method: "get", class:""  %>
                      <%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_admin_item_path(i.id), method: "get", class:""  %>

                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

    </div>
  </div>
</div>

