<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, i| %>
      <tr>	
        <td><%= i + 1 %></td>
        <td><%= user.email%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>