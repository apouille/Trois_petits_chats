<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>

        <%= simple_form_for(resource, as: resource_name,  url: session_path(resource_name)) do |f| %>
        <div class='beautiful-devise'>
        <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, required: false, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :mot_de_passe %>
            <%= f.password_field :password,
                        required: false,
                        input_html: { autocomplete: "current-password" },
                        class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.input :remember_me, class: "form-control", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions mt-5">
            <%= f.button :submit, "Connexion", class:"btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
        <br>
        <br>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
